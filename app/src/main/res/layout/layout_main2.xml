<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTenDiaDiem"
        android:layout_width="225dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnSua"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSua"
        android:layout_width="78dp"
        android:layout_height="41dp"
        android:text="sua"
        app:layout_constraintBottom_toBottomOf="@+id/tvTenDiaDiem"
        app:layout_constraintEnd_toStartOf="@+id/btnXoa"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvTenDiaDiem"
        app:layout_constraintTop_toTopOf="@+id/tvTenDiaDiem"
        app:layout_constraintVertical_bias="0.444" />

    <Button
        android:id="@+id/btnXoa"
        android:layout_width="76dp"
        android:layout_height="43dp"
        android:text="xoa"
        app:layout_constraintBottom_toBottomOf="@+id/btnSua"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnSua"
        app:layout_constraintTop_toTopOf="@+id/btnSua" />

</androidx.constraintlayout.widget.ConstraintLayout>